<!DOCTYPE html>
<html lang="en">
  <% include partials/head %>

    <body class="bg-cover">
      <% include partials/navbar %>

        <div class="container">
          <div class="row justify-content-center align-items-center text-center">
            <div class="col-xs-12">
              <!-- Main Centered Image -->
              <div class="mb-3"><img id="wheelImg" src="/images/carrotwheel.png"></div>
            </div>
          </div> 

          <div class="row justify-content-center align-items-center">
            <div class="col-sm-8 col-md-6 col-lg-4">

              <!-- Recipe Wheel Form -->
              <form action="/" method="POST" class="mb-5">

                <!-- Recipe Category -->
                <div class="form-group text-left">
                  <select class="form-control"name="category" id="category">
                    <% for ( let i = 0; i < categories.length; i++ ) {
                      const selected = ( categories[i].recipe_category_name == "Main Course" ) ? "selected" : "";
                      %><option value="<%=categories[i].recipe_category_id %>" <%=selected %>><%= categories[i].recipe_category_name %></option>
                    <% } %>
                  </select>
                </div>

                <!-- Recipe Cuisine -->
                <div class="form-group">
                  <select class="form-control" name="cuisine" id="cuisine">
                    <option value="null" selected>Cuisine</option>
                    <% for (let i = 0; i < cuisines.length; i++) { %>
                      <option value="<%= cuisines[i].cuisine_id %>"><%= cuisines[i].cuisine_name %></option>
                    <% } %>
                  </select>
                </div>

                <!-- Dietary Restrictions -->
                <div class="form-group">
                  <select class="form-control" name="diet" id="diet">
                    <option value="null" selected>Deitary Restriction</option>
                    <% for (let i = 0; i < diets.length; i++) { %>
                      <option value="<%= diets[i].dietary_restriction_id %>"><%= diets[i].dietary_restriction_name %></option>
                    <% } %>
                  </select>
                </div>

                <!-- Spin the Wheel -->
                <button id="spinWheel" class="btn btn-primary btn-block" type="submit" value="Spin the Wheel!">Spin the Wheel!</button>
              </form>
              
            </div>
          </div>


          <!-- Space to put a recipe -->
          <div id="recipeDisplay">
            <%if (locals.recipe) { %>
                
              <div class="row align-items-center justify-content-center">
                  <% const placeholder = "/images/recipe-placeholder.png";
                    const image = (recipe.recipe_image_url == null ) ? placeholder : recipe.recipe_image_url; %>
                  <div class="col-sm-8 col-md-6 col-lg-4">
                    <div class="card mb-5">
                      <a href="/recipes/<%= recipe.recipe_id %>">
                        <img class="card-img-top" src="<%= image %>">
                      </a>
                      <div class="card-body">
                        <h5 class="card-title"><%= recipe.recipe_name %></h5>
                        <p class="card-text"><%= recipe.recipe_description %></p>
                      </div>
                    </div>
                  </div>
                </div>       

            <% } %> <!-- end if-->
          </div>

        </div><!-- container-->

        <% include partials/footer %>
        <% include partials/script %>
        <script src="/javascripts/home.js"></script>

        <script>
          $('.nav-home').addClass('active');
        </script>
    </body>
</html>